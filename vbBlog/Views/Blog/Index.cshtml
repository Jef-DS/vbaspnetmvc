@model IEnumerable<Blog>
@{ 
    ViewBag.Title = "Blogs";
}
@if(Model.Count() == 0)
{
    <p>Er zijn geen Blogs</p>
}
else
{
    <table>
        <thead>
            <tr><th>Id</th><th>Titel</th><th>Omschrijving</th></tr>
        </thead>
        <tbody>
            @foreach(var blog in Model)
            {
                <tr>
                    <td>@blog.Id</td>
                    <td>@blog.Title</td>
                    <td>@blog.Omschrijving</td>
                    <td><a asp-action="Delete" asp-route-id="@blog.Id">Verwijderen</a></td>
                    <td><a asp-action="Edit" asp-route-id="@blog.Id">Aanpassen</a></td>
                </tr>
            }
        </tbody>
       
    </table>
}
<a asp-action="Create">Voeg toe</a>

